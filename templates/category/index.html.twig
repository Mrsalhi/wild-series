{% extends 'base.html.twig' %}

{% block title %}All category{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table category : </h1>
    {% for category in categorys %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }} - Catégorie : {{ category.name }}</h2>
            <p>{{ category.name }}</p>
            <a href="{{ path("category_show", { id: category.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
