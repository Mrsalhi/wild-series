{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>saison : {{ season.description}}</p>
            <ul>
        {% for episode in season.episodes %}
            <li><a href= "{{path('program_episode_show', {'program': program.id, 'season': season.id, 'episode': episode.id})}}"> {{ episode.title}} </a></li>
         {% endfor %} 
            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour Ã  la liste des programmes
    </a>
{% endblock %}